@model IEnumerable<WebLeague.Models.Season>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Viewing Seasons of @ViewData["leagueName"]</h1>

<p>
    <a asp-action="Create" asp-route-leagueId="@ViewData["leagueId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-leagueId="@ViewData["leagueId"]">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" asp-route-leagueId="@ViewData["leagueId"]">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-leagueId="@ViewData["leagueId"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
